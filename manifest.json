{
  "name": "Amazon Deal Hider",
  "description": "Hides items from Amazon deals listings, based on their ASIN",
  "version": "1.0.7",
  "content_scripts": [
	{"matches": ["*://*.amazon.com/*"],
	"js":["addscript.js"]
	}
  ],
  "permissions": [
				"contextMenus",
				"*://*.amazon.com/"],
  "background": {
    "scripts": ["amazondeals.js"]
  },
  "web_accessible_resources":["dealcheck.js"],
  "externally_connectable": {
		"matches": ["*://*.amazon.com/*"]
	},
  "manifest_version": 2
}
